{
  "name": "shuaihong-magic-pocket",
  "version": "0.1.0-beta",
  "description": "A desktop ebook reader built with Electron.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tempppw01/ebook-ai.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.shuaihong.magicpocket",
    "productName": "帅红的神奇口袋",
    "directories": {
      "output": "dist"
    },
    "icon": "build/icon.ico",
    "files": [
      "index.html",
      "main.js",
      "style.css",
      "js/",
      "libs/"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github"
    }
  }
}
